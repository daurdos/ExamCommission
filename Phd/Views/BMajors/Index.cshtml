@model IEnumerable<Phd.Models.BMajor>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>


<p>
    <a asp-area="" asp-controller="BMajors" asp-action="GetBRExamCommission" asp-route-id="@ViewBag.BMajorId">Коммиссии</a>
</p>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cypher)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NameRus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NameKaz)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NameEng)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AcademicDepartment)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Cypher)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NameRus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NameKaz)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NameEng)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AcademicDepartment.Id)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> |
                    <a asp-action="CreateBRExamCommission" asp-route-id="@item.Id">Create Commission</a> |
                    <a asp-action="GetBRExamCommission" asp-route-id="@item.Id">Get Comissions</a>
                </td>
            </tr>
        }
    </tbody>
</table>
